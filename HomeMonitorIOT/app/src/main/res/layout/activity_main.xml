<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tiasan.homemonitoriot.MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/activity_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="left"
                android:text="Press 'Get Instant Data' button to get results..."
                android:id="@+id/tvMainActivity" />

            <View android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="370dp"
                android:background="@android:color/darker_gray"
                android:layout_above="@+id/bTemperature"
                android:id="@+id/view2" />

            <Button android:id="@+id/bTemperature"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_above="@+id/bLight"
                android:text="Temperature" />

            <Button android:id="@+id/bHumidity"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_above="@+id/bPressure"
                android:text="Humidity" />

            <Button android:id="@+id/bLight"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="Light" />

            <Button android:id="@+id/bPressure"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="Pressure" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
